<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    </thead>

        <% @bookers.each do |booker| %>
    <tbody>
            <tr>
                <td><%= booker.title %></td>
                <td><%= booker.body %></td>
                <td><%= link_to "show", "/" %></td>
                <td><%= link_to "Edit", "/" %></td>
                <td><%= link_to "Destroy","/" %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<h2>New book</h2>

<%= form_with model:@booker, url:"/bookers", local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <p><%= f.submit "Create Book" %></p>
<% end %>

